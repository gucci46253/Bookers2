<main>
     <% if flash[:notice] %>
     <p id="notice">
       <%= flash[:notice] %>
     </p>
   <% end %>

  <div class="container px-5 px-sm-0">
    <div class="row">
      <div class="col-md-3">
       <%= render 'books/list', user: @user, book: @book %>
      </div>
    <div class="col-md-8 offset-md-1">
     <h2>Books</h2>
     <table class="table">
      <thead>
       <tr>
	    <th>Title</th>
	    <th>Opinion</th>
	    <th colspan="3"></th>
	   </tr>
      </thead>
      <% @books.each do |book| %>
      <tbody>
       <tr>
        <td>
         <%= link_to (book.user) do %><%= image_tag book.user.get_profile_image(100,100) %>
         <% end %>
        </td>
        <td><%= link_to book_path(book) do %><%= book.title %>
        <% end %>
        </td>
        <td><%= book.body %>
        <% end %>
        </td>
       </tr>
      </tbody>
     </table>
    </div>
   </div>
  </div>
</main>