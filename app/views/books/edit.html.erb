<h2>Editing Book</h2>
<% if @book.errors.any? %>
<div class="errors">
          <%= @book.errors.count %>件のerrorが発生しました
          <ul>
          <% @book.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
          </ul>
</div>
          <% end %>
 <%= form_with model: @book, local:true do |f| %>
 <h4>Title</h4>
 <%= f.text_field :title %>

 <h4>Opinion</h4>
 <%= f.text_area :body %>

 <div class="row">
 <%= f.submit('Update Book',class: 'btn btn-success') %>
 </div>
 <% end %>
 <%= link_to "Show", book_path(@book) %>
 <%= link_to "Back", books_path %>

